<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/numb"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.1"
        android:layout_height="match_parent"
        tools:text="101"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/date" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/date"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.2"
        android:layout_height="match_parent"
        tools:text="21.05.2021"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/numb"
        app:layout_constraintEnd_toStartOf="@id/word" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/word"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.2"
        android:layout_height="match_parent"
        tools:text="fuck"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/date"
        app:layout_constraintEnd_toStartOf="@id/definition" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/definition"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.5"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/word"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="lksdkjsdjfnkjsdfb" />

</androidx.constraintlayout.widget.ConstraintLayout>